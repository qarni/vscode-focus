{
  "name": "focus",
  "displayName": "Focus",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:focus.startFocus",
    "onCommand:focus.showIcon"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "focus.startFocus",
        "title": "Time to Focus!"
      },
      {
        "command": "focus.showIcon",
        "title": "Show Focus Cat!",
        "icon": "icons/cat.png"
      }
    ],
    "configuration": [
      {
        "title": "General",
        "order": 0,
        "properties": {
          "focus.work_length_setting": {
            "order": 1,
            "type": "integer",
            "enum": [
              25,
              45,
              60,
              90
            ],
            "default": 25,
            "description": "Choose work session length"
          },
          "focus.break_length_setting": {
            "order": 1,
            "type": "integer",
            "enum": [
              5,
              10,
              15,
              20
            ],
            "default": 5,
            "description": "Choose break session length"
          },
          "focus.long_break_length_setting": {
            "order": 1,
            "type": "integer",
            "enum": [
              20,
              30,
              45,
              60
            ],
            "default": 20,
            "description": "Choose long break session length"
          },
          "focus.max_sessions_setting": {
            "order": 1,
            "type": "integer",
            "enum": [
              2,
              3,
              4,
              4,
              6
            ],
            "default": 4,
            "description": "Choose number of sessions before a long break"
          }
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "focus.showIcon",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "vscode": "^1.1.37"
  }
}
